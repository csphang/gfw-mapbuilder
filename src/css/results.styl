.results__fires-badge
.results__loss-badge
.results__gain-badge
.results__custom-badge
  margin 20px auto 10px
  text-align center
  padding 5px
  width 200px

.results__fires-badge
  border 2px solid $goldTheme

.results__custom-badge
  border 2px solid #97bd3d

.results__loss-badge
  border 2px solid #E291B2

.results__gain-badge
  border 2px solid #7978E8

.results__fires-active
.results__fires-count
  color #E94E02

.results__fires-count
.results__loss--count
.results__gain--count
.results__custom-count
  font-weight bold
  font-size 24px
  padding-bottom 5px

.results__loss--count
.results__loss--unit
  color #E291B2

.results__gain--count
.results__gain--unit
  color #7978E8

.results__loss--unit
.results__gain--unit
  padding 0 3px

.results__legend-container
  justify-content space-between
  font-size 12px
  padding 5px 0
  display flex
  & span
    padding 0 10px

.result__biomass-totals
  border 1px solid $lightGray
  left 20px !important
  top 20px !important
  background white
